{
    "name": "simple-react-app-maker",
    "version": "1.1.4",
    "description": "A very simple collection of build scripts for React applications",
    "bin": {
        "simple-react-server": "./server.mjs",
        "simple-react-publish": "./publish.mjs"
    },
    "types": "./index.d.ts",
    "typings": "./index.d.ts",
    "scripts": {
        "format": "prettier --cache --write ."
    },
    "keywords": [
        "react",
        "esbuild"
    ],
    "engines": {
        "node": ">=18"
    },
    "license": "MIT",
    "repository": "https://github.com/TrapTech/simple-react-app-maker",
    "devDependencies": {
        "prettier": "3.6.2",
        "typescript": "5.9.3"
    },
    "peerDependencies": {
        "react": "*",
        "react-dom": "*"
    },
    "dependencies": {
        "@esbuild-plugins/node-globals-polyfill": "0.2.3",
        "@esbuild-plugins/node-modules-polyfill": "0.2.2",
        "@types/node": "25.2.2",
        "@types/react": "^19.0.1",
        "@types/react-dom": "^19.0.1",
        "browserslist": "^4.21.4",
        "esbuild": "0.27.3",
        "esbuild-plugin-browserslist": "2.0.0",
        "esbuild-plugin-svgr": "^3.1.0",
        "fs-extra": "11.3.3",
        "jsdom": "28.0.0",
        "node-emoji": "2.1.3",
        "react-csp": "1.1.3"
    }
